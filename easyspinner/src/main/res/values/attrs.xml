<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasySpinner">
        <attr name="title" format="string"/>
        <attr name="prompt" format="string"/>
        <attr name="entries" format="reference"/>
        <attr name="titleTextStyle" format="reference"/>
        <attr name="spinnerMode" format="enum">
            <enum name="dialog" value="0"/>
            <enum name="dropdown" value="1"/>
        </attr>
        <attr name="nothingSelectedLayout" format="reference"/>
        <attr name="itemLayout" format="reference"/>
        <attr name="itemSelectedLayout" format="reference"/>
    </declare-styleable>
</resources>